<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>NodataFound}"
		title="{i18n>SelectFunction}"
		search="vhSearch"
		confirm="vhClose"
		cancel="vhCancel"
		contentHeight="100%"
		contentWidth="30%"		
		items="{
			path : '/vhCpfunc',
			sorter : {
				path : 'id',
				descending : false
			}
		}">
		<ColumnListItem>
			<cells>
				<ObjectIdentifier
					title="{id}" />
			 	<Text text="{text}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="10px">
				<header>
					<Text text="{i18n>Title}" />
				</header>
			</Column>
			<Column width="20px">
				<header>
					<Text text="{i18n>Description}" />
				</header>
			</Column>
			 
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>