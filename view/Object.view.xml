				</m:subHeader>
<!--				<m:OverflowToolbar class="sapUiMediumMarginTop">
					<m:ToolbarSpacer/>
					<m:Button text="{i18n>podraft}" type="Transparent" press="onDraft" id="filesmart" visible="{cView>/visible/filesmart}"/>
					<m:Button text="{i18n>link}" type="Transparent" press="onLink"/>
				</m:OverflowToolbar>-->
				<l:VerticalLayout class="sapUiMediumMarginBegin sapUiSmallMarginTop">
					<l:content>
						<m:Label id="documenttype" text="{cData>/hd/bsart} {cData>/hd/batxt}"/>
						<m:Label text=""/>
						<navpopover:SmartLink 
						id="ebelnid" 
						text="{cData>/hd/ebeln}" 
